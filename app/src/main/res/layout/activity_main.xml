<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rem1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You\n\n\nNeed To\nKnow About Covid-19"
        android:textColor="#32e0c4"
        android:textSize="52sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="All You Need To\nKnow About Covid-19"
        android:textColor="#32e0c4"
        android:textSize="32dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="312dp"
        android:layout_height="73dp"
        android:layout_marginTop="66dp"
        app:cardBackgroundColor="#222831"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Now"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#32e0c4"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_baseline_navigate_next_24"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
 </LinearLayout>